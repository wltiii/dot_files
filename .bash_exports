############################################################################
# BASE exports
############################################################################
export USERID=$USER
export EDITOR=gedit 
export TRANSLATOR=javac

############################################################################
# HOME definitions
############################################################################
# setting home should not really be required as it is set by linux on startup
#export HOME=/home/$USER
#export SCALA_HOME=$HOME/bin/scala/scala-2.11.8
#export SBT_HOME=$HOME/bin/sbt
# Append the npm root value to your NODE_PATH variable
#export NODE_PATH=$NODE_PATH:$HOME/local/lib/node_modules
#export SDKMAN_DIR=$HOME/.sdkman

############################################################################
# History exports
############################################################################
export HISTCONTROL=ignoredups:erasedups
export HISTSIZE=50000
export HISTFILESIZE=500000
export HISTIGNORE="pwd:l:ls:q:exit"

######################################################################
# Colors                                                             #
######################################################################
